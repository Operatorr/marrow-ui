---
import DocsLayout from "../../../layouts/DocsLayout.astro";
---

<DocsLayout title="Button" description="Displays a button or a component that looks like a button" activeComponent="button">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Button</h1>
          <p class="mt-2 text-lg text-muted-foreground">Displays a button or a component that looks like a button.</p>
        </div>
        <div class="mw-separator"></div>

        <!-- Preview: Variants -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card min-h-[200px] space-y-6">
            <!-- Variants -->
            <div>
              <p class="text-sm font-medium mb-3">Variants</p>
              <div class="flex flex-wrap items-center gap-3">
                <button class="mw-btn mw-btn-primary">Primary</button>
                <button class="mw-btn mw-btn-secondary">Secondary</button>
                <button class="mw-btn mw-btn-outline">Outline</button>
                <button class="mw-btn mw-btn-ghost">Ghost</button>
                <button class="mw-btn mw-btn-destructive">Destructive</button>
                <button class="mw-btn mw-btn-link">Link</button>
              </div>
            </div>

            <!-- Sizes -->
            <div>
              <p class="text-sm font-medium mb-3">Sizes</p>
              <div class="flex flex-wrap items-center gap-3">
                <button class="mw-btn mw-btn-primary mw-btn-sm">Small</button>
                <button class="mw-btn mw-btn-primary">Default</button>
                <button class="mw-btn mw-btn-primary mw-btn-lg">Large</button>
                <button class="mw-btn mw-btn-outline mw-btn-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
                </button>
              </div>
            </div>

            <!-- With icon -->
            <div>
              <p class="text-sm font-medium mb-3">With Icon</p>
              <div class="flex flex-wrap items-center gap-3">
                <button class="mw-btn mw-btn-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
                  Download
                </button>
                <button class="mw-btn mw-btn-outline">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"/><polyline points="16 6 12 2 8 6"/><line x1="12" x2="12" y1="2" y2="15"/></svg>
                  Upload
                </button>
              </div>
            </div>

            <!-- Disabled -->
            <div>
              <p class="text-sm font-medium mb-3">Disabled</p>
              <div class="flex flex-wrap items-center gap-3">
                <button class="mw-btn mw-btn-primary" disabled>Disabled</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Code: Variants -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <div class="mw-code-block">
            <button onclick="copyCode(this)" class="copy-btn" title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
            </button>
            <pre><code>&lt;!-- Variants --&gt;
&lt;button class="mw-btn mw-btn-primary"&gt;Primary&lt;/button&gt;
&lt;button class="mw-btn mw-btn-secondary"&gt;Secondary&lt;/button&gt;
&lt;button class="mw-btn mw-btn-outline"&gt;Outline&lt;/button&gt;
&lt;button class="mw-btn mw-btn-ghost"&gt;Ghost&lt;/button&gt;
&lt;button class="mw-btn mw-btn-destructive"&gt;Destructive&lt;/button&gt;
&lt;button class="mw-btn mw-btn-link"&gt;Link&lt;/button&gt;

&lt;!-- Sizes --&gt;
&lt;button class="mw-btn mw-btn-primary mw-btn-sm"&gt;Small&lt;/button&gt;
&lt;button class="mw-btn mw-btn-primary"&gt;Default&lt;/button&gt;
&lt;button class="mw-btn mw-btn-primary mw-btn-lg"&gt;Large&lt;/button&gt;

&lt;!-- Icon Button --&gt;
&lt;button class="mw-btn mw-btn-outline mw-btn-icon"&gt;
  &lt;svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
       viewBox="0 0 24 24" fill="none" stroke="currentColor"
       stroke-width="2" stroke-linecap="round" stroke-linejoin="round"&gt;
    &lt;path d="M5 12h14"/&gt;
    &lt;path d="M12 5v14"/&gt;
  &lt;/svg&gt;
&lt;/button&gt;

&lt;!-- With Icon --&gt;
&lt;button class="mw-btn mw-btn-primary"&gt;
  &lt;svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
       viewBox="0 0 24 24" fill="none" stroke="currentColor"
       stroke-width="2" stroke-linecap="round" stroke-linejoin="round"&gt;
    &lt;path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/&gt;
    &lt;polyline points="7 10 12 15 17 10"/&gt;
    &lt;line x1="12" x2="12" y1="15" y2="3"/&gt;
  &lt;/svg&gt;
  Download
&lt;/button&gt;

&lt;!-- Disabled --&gt;
&lt;button class="mw-btn mw-btn-primary" disabled&gt;Disabled&lt;/button&gt;</code></pre>
          </div>
        </div>
      </div>

</DocsLayout>
