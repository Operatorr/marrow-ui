---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const directionCode = `<!-- LTR (default) -->
<div class="mw-card" dir="ltr">
  <div class="flex items-center gap-3 mb-2">
    <div class="mw-avatar">LR</div>
    <div>
      <h4 class="font-heading font-semibold text-sm">Left-to-Right</h4>
      <p class="text-xs text-muted-foreground">This card uses the default LTR direction.</p>
    </div>
  </div>
  <p class="text-sm text-muted-foreground">
    Content flows from left to right.
  </p>
</div>

<!-- RTL -->
<div class="mw-card" dir="rtl">
  <div class="flex items-center gap-3 mb-2">
    <div class="mw-avatar">RL</div>
    <div>
      <h4 class="font-heading font-semibold text-sm">من اليمين إلى اليسار</h4>
      <p class="text-xs text-muted-foreground">هذه البطاقة تستخدم اتجاه RTL.</p>
    </div>
  </div>
  <p class="text-sm text-muted-foreground">
    المحتوى يتدفق من اليمين إلى اليسار.
  </p>
</div>

<!-- Apply RTL to the entire page -->
<html dir="rtl">
  ...
</html>`;
---

<DocsLayout title="Direction" description="Support for right-to-left (RTL) layouts using the dir attribute" activeComponent="direction">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Direction</h1>
          <p class="mt-2 text-lg text-muted-foreground">Support for right-to-left (RTL) layouts using the dir attribute.</p>
        </div>
        <div class="mw-separator"></div>

        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card flex flex-col items-center justify-center min-h-[200px] gap-6">
            <div class="w-full max-w-md">
              <div class="mw-card" dir="ltr">
                <div class="flex items-center gap-3 mb-2">
                  <div class="mw-avatar">LR</div>
                  <div>
                    <h4 class="font-heading font-semibold text-sm">Left-to-Right</h4>
                    <p class="text-xs text-muted-foreground">This card uses the default LTR direction.</p>
                  </div>
                </div>
                <p class="text-sm text-muted-foreground">Content flows from left to right, which is the default for most Western languages like English, French, and Spanish.</p>
              </div>
            </div>
            <div class="w-full max-w-md">
              <div class="mw-card" dir="rtl">
                <div class="flex items-center gap-3 mb-2">
                  <div class="mw-avatar">RL</div>
                  <div>
                    <h4 class="font-heading font-semibold text-sm">من اليمين إلى اليسار</h4>
                    <p class="text-xs text-muted-foreground">هذه البطاقة تستخدم اتجاه RTL.</p>
                  </div>
                </div>
                <p class="text-sm text-muted-foreground">المحتوى يتدفق من اليمين إلى اليسار، وهو الاتجاه المستخدم في اللغات مثل العربية والعبرية والفارسية.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <CodeBlock code={directionCode} lang="html" />
        </div>
      </div>

</DocsLayout>
