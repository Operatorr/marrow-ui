---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const avatarCode = `<!-- Image Avatar -->
<div class="mw-avatar">
  <img src="https://i.pravatar.cc/150?img=32" alt="User avatar" />
</div>

<!-- Fallback Initials -->
<div class="mw-avatar">
  <span>JD</span>
</div>

<!-- Small -->
<div class="mw-avatar mw-avatar-sm">
  <img src="avatar.jpg" alt="User avatar" />
</div>

<!-- Default -->
<div class="mw-avatar">
  <img src="avatar.jpg" alt="User avatar" />
</div>

<!-- Large -->
<div class="mw-avatar mw-avatar-lg">
  <img src="avatar.jpg" alt="User avatar" />
</div>

<!-- Large with Fallback -->
<div class="mw-avatar mw-avatar-lg">
  <span>AB</span>
</div>`;
---

<DocsLayout title="Avatar" description="An image element with a fallback for representing the user" activeComponent="avatar">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Avatar</h1>
          <p class="mt-2 text-lg text-muted-foreground">An image element with a fallback for representing the user.</p>
        </div>
        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card flex items-center justify-center min-h-[200px]">
            <div class="flex items-center gap-6">
              <!-- Image avatar -->
              <div class="mw-avatar">
                <img src="https://i.pravatar.cc/150?img=32" alt="User avatar" />
              </div>

              <!-- Fallback initials -->
              <div class="mw-avatar">
                <span>JD</span>
              </div>

              <!-- Small -->
              <div class="mw-avatar mw-avatar-sm">
                <img src="https://i.pravatar.cc/150?img=12" alt="User avatar" />
              </div>

              <!-- Default -->
              <div class="mw-avatar">
                <img src="https://i.pravatar.cc/150?img=47" alt="User avatar" />
              </div>

              <!-- Large -->
              <div class="mw-avatar mw-avatar-lg">
                <img src="https://i.pravatar.cc/150?img=5" alt="User avatar" />
              </div>

              <!-- Large fallback -->
              <div class="mw-avatar mw-avatar-lg">
                <span>AB</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <CodeBlock code={avatarCode} lang="html" />
        </div>
      </div>

</DocsLayout>
