---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const dialogCode = `<div x-data="mwDialog()">
  <button @click="show()" class="mw-btn mw-btn-outline">Open Dialog</button>

  <template x-if="open">
    <div>
      <div class="mw-overlay" @click="close()"></div>
      <div class="mw-dialog" @keydown.escape.window="close()">
        <div class="flex flex-col space-y-1.5 mb-4">
          <h3 class="font-heading text-lg font-semibold">Edit Profile</h3>
          <p class="text-sm text-muted-foreground">
            Make changes to your profile here. Click save when you're done.
          </p>
        </div>

        <div class="space-y-4">
          <div class="space-y-2">
            <label class="mw-label">Name</label>
            <input type="text" class="mw-input" value="John Doe" />
          </div>
          <div class="space-y-2">
            <label class="mw-label">Email</label>
            <input type="email" class="mw-input" value="john@example.com" />
          </div>
        </div>

        <div class="flex justify-end gap-2 mt-6">
          <button @click="close()" class="mw-btn mw-btn-outline">Cancel</button>
          <button @click="close()" class="mw-btn mw-btn-primary">Save changes</button>
        </div>

        <button @click="close()" class="absolute top-3 right-3 mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
        </button>
      </div>
    </div>
  </template>
</div>`;
---

<DocsLayout title="Dialog" description="A modal dialog that interrupts the user with important content and expects a response" activeComponent="dialog">
  <div class="space-y-8">
    <div>
      <h1 class="font-heading text-3xl font-bold tracking-tight text-pretty">Dialog</h1>
      <p class="mt-2 text-muted-foreground leading-relaxed">A modal dialog that interrupts the user with important content and expects a response.</p>
    </div>

    <div class="mw-separator"></div>

    <div class="space-y-4">
      <h2 class="font-heading text-2xl font-semibold tracking-tight text-pretty">Preview</h2>
      <div class="mw-card flex items-center justify-center min-h-[200px]">
        <div x-data="mwDialog()">
          <button @click="show()" class="mw-btn mw-btn-outline">Open Dialog</button>
          <template x-if="open">
            <div>
              <div class="mw-overlay" @click="close()"></div>
              <div class="mw-dialog" @keydown.escape.window="close()">
                <div class="flex flex-col space-y-1.5 mb-4">
                  <h3 class="font-heading text-lg font-semibold">Edit Profile</h3>
                  <p class="text-sm text-muted-foreground">Make changes to your profile here. Click save when you're done.</p>
                </div>
                <div class="space-y-4">
                  <div class="space-y-2">
                    <label class="mw-label">Name</label>
                    <input type="text" class="mw-input" value="John Doe" />
                  </div>
                  <div class="space-y-2">
                    <label class="mw-label">Email</label>
                    <input type="email" class="mw-input" value="john@example.com" />
                  </div>
                </div>
                <div class="flex justify-end gap-2 mt-6">
                  <button @click="close()" class="mw-btn mw-btn-outline">Cancel</button>
                  <button @click="close()" class="mw-btn mw-btn-primary">Save changes</button>
                </div>
                <button @click="close()" class="absolute top-3 right-3 mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                </button>
              </div>
            </div>
          </template>
        </div>
      </div>
    </div>

    <div class="space-y-4">
      <h2 class="font-heading text-2xl font-semibold tracking-tight text-pretty">Code</h2>
      <CodeBlock code={dialogCode} lang="html" />
    </div>

    <div class="space-y-4">
      <h2 class="font-heading text-2xl font-semibold tracking-tight text-pretty">Usage</h2>

      <div class="space-y-4">
        <div>
          <h3 class="font-heading text-lg font-semibold mb-2">Alpine.js API</h3>
          <p class="text-muted-foreground leading-relaxed mb-3">
            Initialize with <code class="px-1.5 py-0.5 bg-muted rounded text-sm font-mono">x-data="mwDialog()"</code>
          </p>
          <div class="mw-card overflow-x-auto">
            <table class="w-full text-sm">
              <thead class="border-b border-border">
                <tr>
                  <th class="text-left py-3 px-4 font-semibold">Property/Method</th>
                  <th class="text-left py-3 px-4 font-semibold">Type</th>
                  <th class="text-left py-3 px-4 font-semibold">Description</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-border">
                <tr>
                  <td class="py-3 px-4 font-mono text-sm">open</td>
                  <td class="py-3 px-4 text-muted-foreground">Boolean</td>
                  <td class="py-3 px-4">Dialog visibility state</td>
                </tr>
                <tr>
                  <td class="py-3 px-4 font-mono text-sm">show()</td>
                  <td class="py-3 px-4 text-muted-foreground">Method</td>
                  <td class="py-3 px-4">Opens the dialog</td>
                </tr>
                <tr>
                  <td class="py-3 px-4 font-mono text-sm">close()</td>
                  <td class="py-3 px-4 text-muted-foreground">Method</td>
                  <td class="py-3 px-4">Closes the dialog</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div>
          <h3 class="font-heading text-lg font-semibold mb-2">CSS Classes</h3>
          <div class="mw-card overflow-x-auto">
            <table class="w-full text-sm">
              <thead class="border-b border-border">
                <tr>
                  <th class="text-left py-3 px-4 font-semibold">Class</th>
                  <th class="text-left py-3 px-4 font-semibold">Description</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-border">
                <tr>
                  <td class="py-3 px-4 font-mono text-sm">mw-overlay</td>
                  <td class="py-3 px-4">Semi-transparent background overlay</td>
                </tr>
                <tr>
                  <td class="py-3 px-4 font-mono text-sm">mw-dialog</td>
                  <td class="py-3 px-4">Dialog container with scale and fade transitions</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div>
          <h3 class="font-heading text-lg font-semibold mb-2">Accessibility</h3>
          <ul class="space-y-2 text-muted-foreground leading-relaxed">
            <li class="flex gap-2">
              <span class="text-primary mt-1">•</span>
              <span>Dialogs automatically close when pressing <code class="px-1.5 py-0.5 bg-muted rounded text-sm font-mono">Escape</code></span>
            </li>
            <li class="flex gap-2">
              <span class="text-primary mt-1">•</span>
              <span>Clicking the overlay closes the dialog by default</span>
            </li>
            <li class="flex gap-2">
              <span class="text-primary mt-1">•</span>
              <span>Include descriptive heading and description for screen readers</span>
            </li>
            <li class="flex gap-2">
              <span class="text-primary mt-1">•</span>
              <span>Focus management should trap focus within the dialog when open</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</DocsLayout>
