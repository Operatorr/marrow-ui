---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const badgeCode = `<!-- Default -->
<span class="mw-badge mw-badge-default">Default</span>

<!-- Secondary -->
<span class="mw-badge mw-badge-secondary">Secondary</span>

<!-- Outline -->
<span class="mw-badge mw-badge-outline">Outline</span>

<!-- Destructive -->
<span class="mw-badge mw-badge-destructive">Destructive</span>`;
---

<DocsLayout title="Badge" description="Displays a small label or status indicator" activeComponent="badge">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Badge</h1>
          <p class="mt-2 text-lg text-muted-foreground">Displays a small label or status indicator.</p>
        </div>
        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card flex items-center justify-center min-h-[200px]">
            <div class="flex flex-wrap items-center gap-3">
              <span class="mw-badge mw-badge-default">Default</span>
              <span class="mw-badge mw-badge-secondary">Secondary</span>
              <span class="mw-badge mw-badge-outline">Outline</span>
              <span class="mw-badge mw-badge-destructive">Destructive</span>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <CodeBlock code={badgeCode} lang="html" />
        </div>
      </div>

</DocsLayout>
