---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const toggleCode = `<!-- Toggle (unpressed by default) -->
<div x-data="mwToggle()">
  <button class="mw-toggle"
          :data-state="pressed ? 'on' : 'off'"
          @click="toggle()"
          :aria-pressed="pressed">
    <svg ...>Bold icon</svg>
  </button>
</div>

<!-- Toggle (pressed by default) -->
<div x-data="mwToggle(true)">
  <button class="mw-toggle"
          :data-state="pressed ? 'on' : 'off'"
          @click="toggle()"
          :aria-pressed="pressed">
    <svg ...>Italic icon</svg>
  </button>
</div>

<!-- Toggle with text label -->
<div x-data="mwToggle()">
  <button class="mw-toggle !aspect-auto px-3 gap-2"
          :data-state="pressed ? 'on' : 'off'"
          @click="toggle()"
          :aria-pressed="pressed">
    <svg ...>Icon</svg>
    <span class="text-sm">Wrap</span>
  </button>
</div>`;
---

<DocsLayout title="Toggle" description="A two-state button that can be pressed or unpressed" activeComponent="toggle">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Toggle</h1>
          <p class="mt-2 text-lg text-muted-foreground">A button that toggles between pressed and unpressed states.</p>
        </div>

        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Preview</h2>
          <div class="mw-card p-6 flex flex-wrap gap-4">
            <!-- Unpressed (default) -->
            <div x-data="mwToggle()">
              <button class="mw-toggle"
                      :data-state="pressed ? 'on' : 'off'"
                      @click="toggle()"
                      :aria-pressed="pressed"
                      title="Bold">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 4h8a4 4 0 0 1 4 4 4 4 0 0 1-4 4H6z"/><path d="M6 12h9a4 4 0 0 1 4 4 4 4 0 0 1-4 4H6z"/></svg>
              </button>
            </div>

            <!-- Pressed (default on) -->
            <div x-data="mwToggle(true)">
              <button class="mw-toggle"
                      :data-state="pressed ? 'on' : 'off'"
                      @click="toggle()"
                      :aria-pressed="pressed"
                      title="Italic">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" x2="10" y1="4" y2="4"/><line x1="14" x2="5" y1="20" y2="20"/><line x1="15" x2="9" y1="4" y2="20"/></svg>
              </button>
            </div>

            <!-- Another toggle -->
            <div x-data="mwToggle()">
              <button class="mw-toggle"
                      :data-state="pressed ? 'on' : 'off'"
                      @click="toggle()"
                      :aria-pressed="pressed"
                      title="Underline">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 4v6a6 6 0 0 0 12 0V4"/><line x1="4" x2="20" y1="20" y2="20"/></svg>
              </button>
            </div>

            <!-- With text label -->
            <div x-data="mwToggle()">
              <button class="mw-toggle !aspect-auto px-3 gap-2"
                      :data-state="pressed ? 'on' : 'off'"
                      @click="toggle()"
                      :aria-pressed="pressed">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 3-1.9 12.39"/><path d="M6.6 18.27a9 9 0 1 0 0-12.54"/></svg>
                <span class="text-sm">Wrap</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Code</h2>
          <CodeBlock code={toggleCode} lang="html" />
        </div>
      </div>

</DocsLayout>
