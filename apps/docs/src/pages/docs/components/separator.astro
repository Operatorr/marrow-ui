---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const horizontalCode = `<div>
  <h3 class="font-semibold">Marrow UI</h3>
  <p class="text-sm text-muted-foreground">An open-source UI component library.</p>
</div>

<div class="mw-separator"></div>

<div class="flex gap-4 text-sm">
  <span>Documentation</span>
  <span>Components</span>
  <span>Themes</span>
</div>`;

const verticalCode = `<div class="flex items-center h-5">
  <span class="text-sm">Blog</span>
  <div class="mw-separator-vertical"></div>
  <span class="text-sm">Docs</span>
  <div class="mw-separator-vertical"></div>
  <span class="text-sm">Source</span>
</div>`;
---

<DocsLayout title="Separator" description="A visual divider to separate content sections" activeComponent="separator">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Separator</h1>
          <p class="mt-2 text-lg text-muted-foreground">A horizontal or vertical line to visually divide content into distinct sections.</p>
        </div>

        <div class="mw-separator"></div>

        <!-- Horizontal Preview -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Horizontal</h2>
          <div class="mw-card">
            <div>
              <h3 class="font-heading font-semibold">Marrow UI</h3>
              <p class="text-sm text-muted-foreground">An open-source UI component library.</p>
            </div>
            <div class="mw-separator"></div>
            <div class="flex gap-4 text-sm">
              <span>Documentation</span>
              <span>Components</span>
              <span>Themes</span>
            </div>
          </div>
        </div>

        <!-- Vertical Preview -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Vertical</h2>
          <div class="mw-card">
            <div class="flex items-center gap-0 h-5">
              <span class="text-sm">Blog</span>
              <div class="mw-separator-vertical"></div>
              <span class="text-sm">Docs</span>
              <div class="mw-separator-vertical"></div>
              <span class="text-sm">Source</span>
              <div class="mw-separator-vertical"></div>
              <span class="text-sm">License</span>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Code</h2>

          <h3 class="font-heading text-lg font-semibold">Horizontal Separator</h3>
          <CodeBlock code={horizontalCode} lang="html" />

          <h3 class="font-heading text-lg font-semibold mt-6">Vertical Separator</h3>
          <CodeBlock code={verticalCode} lang="html" />
        </div>

        <!-- Usage Notes -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Usage</h2>
          <p class="text-muted-foreground leading-relaxed">Use <code class="px-1.5 py-0.5 bg-muted rounded text-sm font-mono">.mw-separator</code> for a horizontal divider that spans the full width with vertical margin. Use <code class="px-1.5 py-0.5 bg-muted rounded text-sm font-mono">.mw-separator-vertical</code> for a vertical divider inside a flex container &mdash; make sure the parent has a set height (e.g., <code class="px-1.5 py-0.5 bg-muted rounded text-sm font-mono">h-5</code>) so the line is visible.</p>
          <p class="text-muted-foreground leading-relaxed">No JavaScript is required. The separator color is controlled by the <code class="px-1.5 py-0.5 bg-muted rounded text-sm font-mono">--marrow-border</code> CSS variable.</p>
        </div>
      </div>

</DocsLayout>
