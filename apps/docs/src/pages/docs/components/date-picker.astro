---
import DocsLayout from "../../../layouts/DocsLayout.astro";
---

<DocsLayout title="Date Picker" description="An input with a calendar dropdown for selecting dates" activeComponent="date-picker">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Date Picker</h1>
          <p class="mt-2 text-lg text-muted-foreground">An input with a calendar dropdown for selecting dates.</p>
        </div>
        <div class="mw-separator"></div>

        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card flex items-center justify-center min-h-[200px]">
            <div class="w-full max-w-xs" x-data="mwDatePicker()">
              <div class="relative">
                <button @click="toggle()" class="mw-input flex items-center justify-between text-left cursor-pointer">
                  <span :class="selected ? 'text-foreground' : 'text-muted-foreground'" x-text="formatted"></span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground shrink-0"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
                </button>

                <!-- Calendar Dropdown -->
                <div x-show="open" @click.away="open = false" x-cloak
                  class="absolute z-10 mt-1 mw-popover p-3 w-[280px]"
                  x-transition:enter="transition ease-out duration-100"
                  x-transition:enter-start="opacity-0 -translate-y-1"
                  x-transition:enter-end="opacity-100 translate-y-0"
                  x-transition:leave="transition ease-in duration-75"
                  x-transition:leave-start="opacity-100 translate-y-0"
                  x-transition:leave-end="opacity-0 -translate-y-1">

                  <!-- Month Navigation -->
                  <div class="flex items-center justify-between mb-3">
                    <button @click="prevMonth()" class="mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm" aria-label="Previous month">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
                    </button>
                    <span class="text-sm font-medium" x-text="monthName + ' ' + currentYear"></span>
                    <button @click="nextMonth()" class="mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm" aria-label="Next month">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                    </button>
                  </div>

                  <!-- Day Labels -->
                  <div class="grid grid-cols-7 gap-0 mb-1">
                    <template x-for="day in ['Su', 'Mo', 'Tu', 'We', 'Th', 'Fr', 'Sa']">
                      <div class="text-center text-xs text-muted-foreground py-1" x-text="day"></div>
                    </template>
                  </div>

                  <!-- Day Grid -->
                  <div class="grid grid-cols-7 gap-0">
                    <template x-for="(day, index) in days" :key="index">
                      <button
                        @click="selectDate(day)"
                        :disabled="!day"
                        :class="{
                          'bg-primary text-primary-foreground': isSelected(day),
                          'hover:bg-accent': day && !isSelected(day),
                          'invisible': !day
                        }"
                        class="w-8 h-8 text-sm rounded-marrow flex items-center justify-center transition-colors"
                        x-text="day || ''">
                      </button>
                    </template>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <div class="mw-code-block">
            <button onclick="copyCode(this)" class="copy-btn" title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
            </button>
            <pre><code>&lt;div x-data="mwDatePicker()"&gt;
  &lt;div class="relative"&gt;
    &lt;!-- Trigger Button --&gt;
    &lt;button @click="toggle()" class="mw-input flex items-center justify-between text-left cursor-pointer"&gt;
      &lt;span :class="selected ? 'text-foreground' : 'text-muted-foreground'"
        x-text="formatted"&gt;&lt;/span&gt;
      &lt;svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
        viewBox="0 0 24 24" fill="none" stroke="currentColor"
        stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
        class="text-muted-foreground"&gt;
        &lt;rect width="18" height="18" x="3" y="4" rx="2" ry="2"/&gt;
        &lt;line x1="16" x2="16" y1="2" y2="6"/&gt;
        &lt;line x1="8" x2="8" y1="2" y2="6"/&gt;
        &lt;line x1="3" x2="21" y1="10" y2="10"/&gt;
      &lt;/svg&gt;
    &lt;/button&gt;

    &lt;!-- Calendar Dropdown --&gt;
    &lt;div x-show="open" @click.away="open = false" x-cloak
      class="absolute z-10 mt-1 mw-popover p-3 w-[280px]"&gt;

      &lt;!-- Month Navigation --&gt;
      &lt;div class="flex items-center justify-between mb-3"&gt;
        &lt;button @click="prevMonth()" class="mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm"&gt;
          &lt;svg ...left chevron.../&gt;
        &lt;/button&gt;
        &lt;span class="text-sm font-medium" x-text="monthName + ' ' + currentYear"&gt;&lt;/span&gt;
        &lt;button @click="nextMonth()" class="mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm"&gt;
          &lt;svg ...right chevron.../&gt;
        &lt;/button&gt;
      &lt;/div&gt;

      &lt;!-- Day Labels --&gt;
      &lt;div class="grid grid-cols-7 gap-0 mb-1"&gt;
        &lt;template x-for="day in ['Su', 'Mo', 'Tu', 'We', 'Th', 'Fr', 'Sa']"&gt;
          &lt;div class="text-center text-xs text-muted-foreground py-1" x-text="day"&gt;&lt;/div&gt;
        &lt;/template&gt;
      &lt;/div&gt;

      &lt;!-- Day Grid --&gt;
      &lt;div class="grid grid-cols-7 gap-0"&gt;
        &lt;template x-for="(day, index) in days" :key="index"&gt;
          &lt;button
            @click="selectDate(day)"
            :disabled="!day"
            :class="{
              'bg-primary text-primary-foreground': isSelected(day),
              'hover:bg-accent': day &amp;&amp; !isSelected(day),
              'invisible': !day
            }"
            class="w-8 h-8 text-sm rounded-marrow flex items-center justify-center"
            x-text="day || ''"&gt;
          &lt;/button&gt;
        &lt;/template&gt;
      &lt;/div&gt;
    &lt;/div&gt;
  &lt;/div&gt;
&lt;/div&gt;</code></pre>
          </div>
        </div>
      </div>

</DocsLayout>
