---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const collapsibleCode = `<div x-data="mwCollapsible()">
  <div class="flex items-center justify-between">
    <h4 class="text-sm font-semibold">@marrow-ui/components</h4>
    <button @click="toggle()" class="mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14"
        viewBox="0 0 24 24" fill="none" stroke="currentColor"
        stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
        :class="open ? 'rotate-180' : ''" class="transition-transform">
        <path d="m6 9 6 6 6-6"/>
      </svg>
    </button>
  </div>

  <!-- Always visible item -->
  <div class="mt-2 rounded-marrow border border-border px-3 py-2 text-sm">
    <span class="text-muted-foreground">marrow-ui/card.html</span>
  </div>

  <!-- Collapsible content -->
  <div x-show="open" x-collapse class="mt-1 space-y-1">
    <div class="rounded-marrow border border-border px-3 py-2 text-sm">
      <span class="text-muted-foreground">marrow-ui/button.html</span>
    </div>
    <div class="rounded-marrow border border-border px-3 py-2 text-sm">
      <span class="text-muted-foreground">marrow-ui/dialog.html</span>
    </div>
    <div class="rounded-marrow border border-border px-3 py-2 text-sm">
      <span class="text-muted-foreground">marrow-ui/tabs.html</span>
    </div>
  </div>
</div>`;
---

<DocsLayout title="Collapsible" description="A component that can be expanded or collapsed to show or hide content" activeComponent="collapsible">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Collapsible</h1>
          <p class="mt-2 text-lg text-muted-foreground">A component that can be expanded or collapsed to show or hide content.</p>
        </div>
        <div class="mw-separator"></div>

        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card flex items-center justify-center min-h-[200px]">
            <div class="w-full max-w-sm" x-data="mwCollapsible()">
              <div class="flex items-center justify-between">
                <h4 class="text-sm font-semibold">@marrow-ui/components</h4>
                <button @click="toggle()" class="mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" :class="open ? 'rotate-180' : ''" class="transition-transform"><path d="m6 9 6 6 6-6"/></svg>
                </button>
              </div>
              <div class="mt-2 rounded-marrow border border-border px-3 py-2 text-sm">
                <span class="text-muted-foreground">marrow-ui/card.html</span>
              </div>
              <div x-show="open" x-collapse class="mt-1 space-y-1">
                <div class="rounded-marrow border border-border px-3 py-2 text-sm">
                  <span class="text-muted-foreground">marrow-ui/button.html</span>
                </div>
                <div class="rounded-marrow border border-border px-3 py-2 text-sm">
                  <span class="text-muted-foreground">marrow-ui/dialog.html</span>
                </div>
                <div class="rounded-marrow border border-border px-3 py-2 text-sm">
                  <span class="text-muted-foreground">marrow-ui/tabs.html</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <CodeBlock code={collapsibleCode} lang="html" />
        </div>
      </div>

</DocsLayout>
