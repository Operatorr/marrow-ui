---
import DocsLayout from "../../../layouts/DocsLayout.astro";
---

<DocsLayout title="Calendar" description="An inline date calendar for selecting dates" activeComponent="calendar">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Calendar</h1>
          <p class="mt-2 text-lg text-muted-foreground">An inline date calendar for selecting dates.</p>
        </div>
        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card flex items-center justify-center min-h-[350px]">
            <div x-data="mwCalendar()" class="mw-card w-[280px] p-3">
              <!-- Month Navigation -->
              <div class="flex items-center justify-between mb-4">
                <button @click="prevMonth()" class="mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
                </button>
                <span class="text-sm font-medium" x-text="monthName + ' ' + currentYear"></span>
                <button @click="nextMonth()" class="mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                </button>
              </div>

              <!-- Day headers -->
              <div class="grid grid-cols-7 mb-1">
                <template x-for="day in ['Su', 'Mo', 'Tu', 'We', 'Th', 'Fr', 'Sa']" :key="day">
                  <div class="text-center text-xs font-medium text-muted-foreground py-1" x-text="day"></div>
                </template>
              </div>

              <!-- Day grid -->
              <div class="grid grid-cols-7">
                <template x-for="(day, index) in days" :key="index">
                  <button
                    @click="selectDate(day)"
                    :disabled="!day"
                    :class="{
                      'bg-primary text-primary-foreground hover:bg-primary/90': isSelected(day),
                      'bg-accent': isToday(day) && !isSelected(day),
                      'hover:bg-accent': day && !isSelected(day),
                      'opacity-0 pointer-events-none': !day
                    }"
                    class="h-8 w-8 mx-auto rounded-[var(--marrow-radius)] text-sm flex items-center justify-center transition-colors"
                    x-text="day || ''">
                  </button>
                </template>
              </div>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <div class="mw-code-block">
            <button class="copy-btn" title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
            </button>
            <pre><code is:raw>&lt;div x-data="mwCalendar()" class="mw-card w-[280px] p-3"&gt;
  &lt;!-- Month Navigation --&gt;
  &lt;div class="flex items-center justify-between mb-4"&gt;
    &lt;button @click="prevMonth()" class="mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm"&gt;
      &lt;svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
           viewBox="0 0 24 24" fill="none" stroke="currentColor"
           stroke-width="2" stroke-linecap="round" stroke-linejoin="round"&gt;
        &lt;path d="m15 18-6-6 6-6"/&gt;
      &lt;/svg&gt;
    &lt;/button&gt;
    &lt;span class="text-sm font-medium"
          x-text="monthName + ' ' + currentYear"&gt;&lt;/span&gt;
    &lt;button @click="nextMonth()" class="mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm"&gt;
      &lt;svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
           viewBox="0 0 24 24" fill="none" stroke="currentColor"
           stroke-width="2" stroke-linecap="round" stroke-linejoin="round"&gt;
        &lt;path d="m9 18 6-6-6-6"/&gt;
      &lt;/svg&gt;
    &lt;/button&gt;
  &lt;/div&gt;

  &lt;!-- Day of week headers --&gt;
  &lt;div class="grid grid-cols-7 mb-1"&gt;
    &lt;template x-for="day in ['Su','Mo','Tu','We','Th','Fr','Sa']" :key="day"&gt;
      &lt;div class="text-center text-xs font-medium text-muted-foreground py-1"
           x-text="day"&gt;&lt;/div&gt;
    &lt;/template&gt;
  &lt;/div&gt;

  &lt;!-- Day grid --&gt;
  &lt;div class="grid grid-cols-7"&gt;
    &lt;template x-for="(day, index) in days" :key="index"&gt;
      &lt;button
        @click="selectDate(day)"
        :disabled="!day"
        :class="{
          'bg-primary text-primary-foreground hover:bg-primary/90': isSelected(day),
          'bg-accent': isToday(day) &amp;&amp; !isSelected(day),
          'hover:bg-accent': day &amp;&amp; !isSelected(day),
          'opacity-0 pointer-events-none': !day
        }"
        class="h-8 w-8 mx-auto rounded-[var(--marrow-radius)] text-sm
               flex items-center justify-center transition-colors"
        x-text="day || ''"&gt;
      &lt;/button&gt;
    &lt;/template&gt;
  &lt;/div&gt;
&lt;/div&gt;</code></pre>
          </div>
        </div>
      </div>

</DocsLayout>
