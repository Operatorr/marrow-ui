---
import DocsLayout from "../../../layouts/DocsLayout.astro";
---

<DocsLayout title="Toggle Group" description="A group of toggle buttons where one or multiple can be selected" activeComponent="toggle-group">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Toggle Group</h1>
          <p class="mt-2 text-lg text-muted-foreground">A group of toggle buttons that supports single or multiple selection.</p>
        </div>

        <div class="mw-separator"></div>

        <!-- Preview: Single Selection -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Preview</h2>

          <div class="mw-card p-6 space-y-6">
            <!-- Single selection -->
            <div>
              <p class="text-sm font-medium mb-3">Single Selection</p>
              <div x-data="mwToggleGroup('single', 'center')" class="inline-flex gap-1 bg-muted rounded-[var(--marrow-radius)] p-1">
                <button class="mw-toggle"
                        :data-state="isSelected('left') ? 'on' : 'off'"
                        @click="select('left')"
                        title="Align Left">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="21" x2="3" y1="6" y2="6"/><line x1="15" x2="3" y1="12" y2="12"/><line x1="17" x2="3" y1="18" y2="18"/></svg>
                </button>
                <button class="mw-toggle"
                        :data-state="isSelected('center') ? 'on' : 'off'"
                        @click="select('center')"
                        title="Align Center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="21" x2="3" y1="6" y2="6"/><line x1="17" x2="7" y1="12" y2="12"/><line x1="19" x2="5" y1="18" y2="18"/></svg>
                </button>
                <button class="mw-toggle"
                        :data-state="isSelected('right') ? 'on' : 'off'"
                        @click="select('right')"
                        title="Align Right">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="21" x2="3" y1="6" y2="6"/><line x1="21" x2="9" y1="12" y2="12"/><line x1="21" x2="7" y1="18" y2="18"/></svg>
                </button>
              </div>
            </div>

            <!-- Multiple selection -->
            <div>
              <p class="text-sm font-medium mb-3">Multiple Selection</p>
              <div x-data="mwToggleGroup('multiple', ['bold'])" class="inline-flex gap-1 bg-muted rounded-[var(--marrow-radius)] p-1">
                <button class="mw-toggle"
                        :data-state="isSelected('bold') ? 'on' : 'off'"
                        @click="select('bold')"
                        title="Bold">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 4h8a4 4 0 0 1 4 4 4 4 0 0 1-4 4H6z"/><path d="M6 12h9a4 4 0 0 1 4 4 4 4 0 0 1-4 4H6z"/></svg>
                </button>
                <button class="mw-toggle"
                        :data-state="isSelected('italic') ? 'on' : 'off'"
                        @click="select('italic')"
                        title="Italic">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" x2="10" y1="4" y2="4"/><line x1="14" x2="5" y1="20" y2="20"/><line x1="15" x2="9" y1="4" y2="20"/></svg>
                </button>
                <button class="mw-toggle"
                        :data-state="isSelected('underline') ? 'on' : 'off'"
                        @click="select('underline')"
                        title="Underline">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 4v6a6 6 0 0 0 12 0V4"/><line x1="4" x2="20" y1="20" y2="20"/></svg>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Code</h2>
          <div class="mw-code-block">
            <button class="copy-btn" title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
            </button>
            <pre><code is:raw>&lt;!-- Single selection toggle group --&gt;
&lt;div x-data="mwToggleGroup('single', 'center')"
     class="inline-flex gap-1 bg-muted rounded-[var(--marrow-radius)] p-1"&gt;
  &lt;button class="mw-toggle"
          :data-state="isSelected('left') ? 'on' : 'off'"
          @click="select('left')"&gt;
    &lt;svg ...&gt;Align Left&lt;/svg&gt;
  &lt;/button&gt;
  &lt;button class="mw-toggle"
          :data-state="isSelected('center') ? 'on' : 'off'"
          @click="select('center')"&gt;
    &lt;svg ...&gt;Align Center&lt;/svg&gt;
  &lt;/button&gt;
  &lt;button class="mw-toggle"
          :data-state="isSelected('right') ? 'on' : 'off'"
          @click="select('right')"&gt;
    &lt;svg ...&gt;Align Right&lt;/svg&gt;
  &lt;/button&gt;
&lt;/div&gt;

&lt;!-- Multiple selection toggle group --&gt;
&lt;div x-data="mwToggleGroup('multiple', ['bold'])"
     class="inline-flex gap-1 bg-muted rounded-[var(--marrow-radius)] p-1"&gt;
  &lt;button class="mw-toggle"
          :data-state="isSelected('bold') ? 'on' : 'off'"
          @click="select('bold')"&gt;
    &lt;svg ...&gt;Bold&lt;/svg&gt;
  &lt;/button&gt;
  &lt;button class="mw-toggle"
          :data-state="isSelected('italic') ? 'on' : 'off'"
          @click="select('italic')"&gt;
    &lt;svg ...&gt;Italic&lt;/svg&gt;
  &lt;/button&gt;
  &lt;button class="mw-toggle"
          :data-state="isSelected('underline') ? 'on' : 'off'"
          @click="select('underline')"&gt;
    &lt;svg ...&gt;Underline&lt;/svg&gt;
  &lt;/button&gt;
&lt;/div&gt;</code></pre>
          </div>
        </div>
      </div>

</DocsLayout>
