---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const basicCardCode = `<div class="mw-card">
  <div class="pb-3 mb-3 border-b border-border">
    <h3 class="font-heading text-lg font-semibold">Card Title</h3>
    <p class="text-sm text-muted-foreground mt-1">Card description goes here.</p>
  </div>
  <div class="py-2">
    <p class="text-sm text-muted-foreground">This is the card content area.</p>
  </div>
  <div class="pt-3 mt-3 border-t border-border flex justify-end gap-2">
    <button class="mw-btn mw-btn-outline mw-btn-sm">Cancel</button>
    <button class="mw-btn mw-btn-primary mw-btn-sm">Save</button>
  </div>
</div>`;

const simpleCardCode = `<div class="mw-card">
  <p class="text-sm text-muted-foreground">A simple card with just content inside.</p>
</div>`;

const cardGridCode = `<div class="grid md:grid-cols-3 gap-4">
  <div class="mw-card">
    <h3 class="font-heading font-semibold mb-2">Revenue</h3>
    <p class="text-2xl font-bold">$45,231</p>
    <p class="text-xs text-muted-foreground mt-1">+20.1% from last month</p>
  </div>
  <div class="mw-card">
    <h3 class="font-heading font-semibold mb-2">Users</h3>
    <p class="text-2xl font-bold">+2,350</p>
    <p class="text-xs text-muted-foreground mt-1">+180 this week</p>
  </div>
  <div class="mw-card">
    <h3 class="font-heading font-semibold mb-2">Active Now</h3>
    <p class="text-2xl font-bold">573</p>
    <p class="text-xs text-muted-foreground mt-1">+12 since last hour</p>
  </div>
</div>`;

const interactiveCardCode = `<a href="#" class="mw-card block no-underline hover:border-primary/50 transition-colors">
  <h3 class="font-heading font-semibold">Click me</h3>
  <p class="text-sm text-muted-foreground mt-1">This entire card is a clickable link.</p>
</a>`;
---

<DocsLayout title="Card" description="A container component for grouping related content with header, body, and footer sections" activeComponent="card">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Card</h1>
          <p class="mt-2 text-lg text-muted-foreground">A container component for grouping related content with header, body, and footer sections.</p>
        </div>
        <div class="mw-separator"></div>

        <!-- Preview: Basic Card -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card flex items-center justify-center min-h-[200px]">
            <div class="mw-card w-full max-w-sm">
              <div class="pb-3 mb-3 border-b border-border">
                <h3 class="font-heading text-lg font-semibold">Card Title</h3>
                <p class="text-sm text-muted-foreground mt-1">Card description goes here.</p>
              </div>
              <div class="py-2">
                <p class="text-sm text-muted-foreground">This is the card content area. You can place any content here including text, images, forms, or other components.</p>
              </div>
              <div class="pt-3 mt-3 border-t border-border flex justify-end gap-2">
                <button class="mw-btn mw-btn-outline mw-btn-sm">Cancel</button>
                <button class="mw-btn mw-btn-primary mw-btn-sm">Save</button>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <CodeBlock code={basicCardCode} lang="html" />
        </div>

        <div class="mw-separator"></div>

        <!-- Variations -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Simple Card</h2>
          <p class="text-sm text-muted-foreground">A card with just content, no header or footer.</p>
          <div class="mw-card flex items-center justify-center min-h-[120px]">
            <div class="mw-card w-full max-w-sm">
              <p class="text-sm text-muted-foreground">A simple card with just content inside. No header or footer needed.</p>
            </div>
          </div>
          <CodeBlock code={simpleCardCode} lang="html" />
        </div>

        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Card Grid</h2>
          <p class="text-sm text-muted-foreground">Cards arranged in a responsive grid layout.</p>
          <div class="grid md:grid-cols-3 gap-4">
            <div class="mw-card">
              <div class="flex items-center gap-2 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
                <h3 class="font-heading font-semibold">Revenue</h3>
              </div>
              <p class="text-2xl font-bold">$45,231</p>
              <p class="text-xs text-muted-foreground mt-1">+20.1% from last month</p>
            </div>
            <div class="mw-card">
              <div class="flex items-center gap-2 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                <h3 class="font-heading font-semibold">Users</h3>
              </div>
              <p class="text-2xl font-bold">+2,350</p>
              <p class="text-xs text-muted-foreground mt-1">+180 this week</p>
            </div>
            <div class="mw-card">
              <div class="flex items-center gap-2 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
                <h3 class="font-heading font-semibold">Active Now</h3>
              </div>
              <p class="text-2xl font-bold">573</p>
              <p class="text-xs text-muted-foreground mt-1">+12 since last hour</p>
            </div>
          </div>
          <CodeBlock code={cardGridCode} lang="html" />
        </div>

        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Interactive Card</h2>
          <p class="text-sm text-muted-foreground">A card styled as a clickable link with hover effects.</p>
          <div class="mw-card flex items-center justify-center min-h-[120px]">
            <a href="#" class="mw-card block w-full max-w-sm no-underline hover:border-primary/50 transition-colors">
              <h3 class="font-heading font-semibold group-hover:text-primary">Click me</h3>
              <p class="text-sm text-muted-foreground mt-1">This entire card is a clickable link with a hover border effect.</p>
            </a>
          </div>
          <CodeBlock code={interactiveCardCode} lang="html" />
        </div>
      </div>

</DocsLayout>
