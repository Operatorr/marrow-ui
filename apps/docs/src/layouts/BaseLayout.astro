---
interface Props {
  title?: string;
  description?: string;
}

const { title = "Marrow UI", description = "A sleek UI kit built with Tailwind CSS and Alpine.js" } = Astro.props;
const pageTitle = title === "Marrow UI" ? title : `${title} â€“ Marrow UI`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>
  <meta name="description" content={description}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  <script is:inline defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <script is:inline src="/js/marrow.js"></script>
</head>
<body class="min-h-screen font-body antialiased bg-background text-foreground">
  <slot />
</body>
</html>

<style is:global>
  *, *::before, *::after {
    border-color: hsl(var(--marrow-border));
  }
</style>
