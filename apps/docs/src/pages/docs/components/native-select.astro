---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const selectCode = `<div class="space-y-2">
  <label class="mw-label" for="framework-select">Framework</label>
  <select id="framework-select" class="mw-select">
    <option value="" disabled selected>Select a framework</option>
    <option value="django">Django</option>
    <option value="laravel">Laravel</option>
    <option value="rails">Ruby on Rails</option>
    <option value="express">Express</option>
    <option value="flask">Flask</option>
  </select>
</div>`;

const selectOptgroupCode = `<div class="space-y-2">
  <label class="mw-label" for="language-select">Language</label>
  <select id="language-select" class="mw-select">
    <option value="" disabled selected>Choose a language</option>
    <optgroup label="Frontend">
      <option value="js">JavaScript</option>
      <option value="ts">TypeScript</option>
    </optgroup>
    <optgroup label="Backend">
      <option value="python">Python</option>
      <option value="ruby">Ruby</option>
      <option value="go">Go</option>
      <option value="rust">Rust</option>
    </optgroup>
  </select>
</div>`;

const selectDisabledCode = `<select class="mw-select" disabled>
  <option value="us">United States</option>
</select>`;
---

<DocsLayout title="Native Select" description="A styled native HTML select element for simple dropdowns" activeComponent="native-select">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Native Select</h1>
          <p class="mt-2 text-lg text-muted-foreground">A styled native HTML select element. Uses the browser's built-in dropdown behavior for maximum compatibility and accessibility.</p>
        </div>

        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Preview</h2>
          <div class="mw-card">
            <div class="space-y-4 max-w-sm">
              <div class="space-y-2">
                <label class="mw-label" for="framework-select">Framework</label>
                <select id="framework-select" class="mw-select">
                  <option value="" disabled selected>Select a framework</option>
                  <option value="django">Django</option>
                  <option value="laravel">Laravel</option>
                  <option value="rails">Ruby on Rails</option>
                  <option value="express">Express</option>
                  <option value="flask">Flask</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Code</h2>
          <CodeBlock code={selectCode} lang="html" />
        </div>

        <!-- With Option Groups -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">With Option Groups</h2>
          <p class="text-muted-foreground leading-relaxed">Use native <code class="px-1.5 py-0.5 bg-muted rounded text-sm font-mono">&lt;optgroup&gt;</code> elements to organize options into categories.</p>
          <div class="mw-card">
            <div class="space-y-2 max-w-sm">
              <label class="mw-label" for="language-select">Language</label>
              <select id="language-select" class="mw-select">
                <option value="" disabled selected>Choose a language</option>
                <optgroup label="Frontend">
                  <option value="js">JavaScript</option>
                  <option value="ts">TypeScript</option>
                </optgroup>
                <optgroup label="Backend">
                  <option value="python">Python</option>
                  <option value="ruby">Ruby</option>
                  <option value="go">Go</option>
                  <option value="rust">Rust</option>
                </optgroup>
              </select>
            </div>
          </div>

          <CodeBlock code={selectOptgroupCode} lang="html" />
        </div>

        <!-- Disabled -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Disabled</h2>
          <div class="mw-card">
            <div class="space-y-2 max-w-sm">
              <label class="mw-label opacity-50" for="disabled-select">Region</label>
              <select id="disabled-select" class="mw-select" disabled>
                <option value="us">United States</option>
              </select>
            </div>
          </div>

          <CodeBlock code={selectDisabledCode} lang="html" />
        </div>
      </div>

</DocsLayout>
