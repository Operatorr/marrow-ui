---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const labelCode = `<!-- Basic label with input -->
<div class="space-y-2">
  <label class="mw-label" for="email-input">Email address</label>
  <input type="email" id="email-input" class="mw-input" placeholder="you@example.com">
</div>

<!-- Label with required indicator -->
<div class="space-y-2">
  <label class="mw-label" for="name-input">
    Full name <span class="text-destructive">*</span>
  </label>
  <input type="text" id="name-input" class="mw-input" placeholder="Enter your full name">
</div>

<!-- Label with description text -->
<div class="space-y-2">
  <label class="mw-label" for="username-input">Username</label>
  <input type="text" id="username-input" class="mw-input" placeholder="marrow-user">
  <p class="text-xs text-muted-foreground">This will be your public display name.</p>
</div>`;

const labelDisabledCode = `<div class="space-y-2">
  <label class="mw-label opacity-50" for="disabled-input">Disabled field</label>
  <input type="text" id="disabled-input" class="mw-input" placeholder="Cannot edit" disabled>
</div>`;
---

<DocsLayout title="Label" description="Label component for form inputs with optional required indicator" activeComponent="label">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Label</h1>
          <p class="mt-2 text-lg text-muted-foreground">An accessible label element for form controls. Supports required indicators and pairs naturally with inputs, selects, and textareas.</p>
        </div>

        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Preview</h2>
          <div class="mw-card">
            <div class="space-y-6 max-w-sm">
              <!-- Basic label with input -->
              <div class="space-y-2">
                <label class="mw-label" for="email-input">Email address</label>
                <input type="email" id="email-input" class="mw-input" placeholder="you@example.com">
              </div>

              <!-- Label with required indicator -->
              <div class="space-y-2">
                <label class="mw-label" for="name-input">
                  Full name <span class="text-destructive">*</span>
                </label>
                <input type="text" id="name-input" class="mw-input" placeholder="Enter your full name">
              </div>

              <!-- Label with description -->
              <div class="space-y-2">
                <label class="mw-label" for="username-input">Username</label>
                <input type="text" id="username-input" class="mw-input" placeholder="marrow-user">
                <p class="text-xs text-muted-foreground">This will be your public display name.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Code</h2>
          <CodeBlock code={labelCode} lang="html" />
        </div>

        <!-- Disabled State -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Disabled State</h2>
          <p class="text-muted-foreground leading-relaxed">When paired with a disabled input, the label can be visually dimmed to indicate the field is inactive.</p>
          <div class="mw-card">
            <div class="space-y-2 max-w-sm">
              <label class="mw-label opacity-50" for="disabled-input">Disabled field</label>
              <input type="text" id="disabled-input" class="mw-input" placeholder="Cannot edit" disabled>
            </div>
          </div>

          <CodeBlock code={labelDisabledCode} lang="html" />
        </div>
      </div>

</DocsLayout>
