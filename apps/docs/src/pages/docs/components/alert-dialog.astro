---
import DocsLayout from "../../../layouts/DocsLayout.astro";
---

<DocsLayout title="Alert Dialog" description="A modal dialog that interrupts the user with important content and expects a response" activeComponent="alert-dialog">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Alert Dialog</h1>
          <p class="mt-2 text-lg text-muted-foreground">A modal dialog that interrupts the user with important content and expects a response.</p>
        </div>
        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card flex items-center justify-center min-h-[200px]">
            <div x-data="mwAlertDialog()">
              <button @click="show()" class="mw-btn mw-btn-outline">Delete Account</button>

              <!-- Overlay -->
              <template x-if="open">
                <div class="fixed inset-0 z-50" @keydown.escape.window="cancel()">
                  <div class="mw-overlay" @click="cancel()"></div>
                  <div class="mw-dialog max-w-md">
                    <h2 class="font-heading text-lg font-semibold">Are you absolutely sure?</h2>
                    <p class="mt-2 text-sm text-muted-foreground">This action cannot be undone. This will permanently delete your account and remove your data from our servers.</p>
                    <div class="mt-6 flex justify-end gap-2">
                      <button @click="cancel()" class="mw-btn mw-btn-outline">Cancel</button>
                      <button @click="confirm()" class="mw-btn mw-btn-destructive">Yes, delete account</button>
                    </div>
                  </div>
                </div>
              </template>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <div class="mw-code-block">
            <button onclick="copyCode(this)" class="copy-btn" title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
            </button>
            <pre><code>&lt;div x-data="mwAlertDialog()"&gt;
  &lt;button @click="show()" class="mw-btn mw-btn-outline"&gt;
    Delete Account
  &lt;/button&gt;

  &lt;template x-if="open"&gt;
    &lt;div class="fixed inset-0 z-50" @keydown.escape.window="cancel()"&gt;
      &lt;!-- Overlay --&gt;
      &lt;div class="mw-overlay" @click="cancel()"&gt;&lt;/div&gt;

      &lt;!-- Dialog --&gt;
      &lt;div class="mw-dialog max-w-md"&gt;
        &lt;h2 class="font-heading text-lg font-semibold"&gt;
          Are you absolutely sure?
        &lt;/h2&gt;
        &lt;p class="mt-2 text-sm text-muted-foreground"&gt;
          This action cannot be undone. This will permanently
          delete your account and remove your data from our servers.
        &lt;/p&gt;
        &lt;div class="mt-6 flex justify-end gap-2"&gt;
          &lt;button @click="cancel()" class="mw-btn mw-btn-outline"&gt;
            Cancel
          &lt;/button&gt;
          &lt;button @click="confirm()" class="mw-btn mw-btn-destructive"&gt;
            Yes, delete account
          &lt;/button&gt;
        &lt;/div&gt;
      &lt;/div&gt;
    &lt;/div&gt;
  &lt;/template&gt;
&lt;/div&gt;</code></pre>
          </div>
        </div>
      </div>

</DocsLayout>
