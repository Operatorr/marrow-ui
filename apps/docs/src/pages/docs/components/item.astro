---
import DocsLayout from "../../../layouts/DocsLayout.astro";
---

<DocsLayout title="Item" description="A list item component with icon, title, description, and optional trailing content" activeComponent="item">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Item</h1>
          <p class="mt-2 text-lg text-muted-foreground">A versatile list item component for displaying rows of content with icons, titles, descriptions, and trailing elements like badges or chevrons.</p>
        </div>

        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Preview</h2>
          <div class="mw-card">
            <div class="divide-y divide-border">
              <!-- Item with icon, title, description, and badge -->
              <div class="flex items-center gap-3 px-4 py-3 hover:bg-accent/50 transition-colors cursor-pointer">
                <div class="flex items-center justify-center w-9 h-9 rounded-md bg-primary/10 text-primary shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="text-sm font-medium">Project Roadmap</div>
                  <div class="text-xs text-muted-foreground">Updated 2 hours ago</div>
                </div>
                <span class="mw-badge mw-badge-default">New</span>
              </div>

              <!-- Item with icon, title, description, and chevron -->
              <div class="flex items-center gap-3 px-4 py-3 hover:bg-accent/50 transition-colors cursor-pointer">
                <div class="flex items-center justify-center w-9 h-9 rounded-md bg-primary/10 text-primary shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="text-sm font-medium">Team Members</div>
                  <div class="text-xs text-muted-foreground">Manage your team and permissions</div>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground"><path d="m9 18 6-6-6-6"/></svg>
              </div>

              <!-- Item with icon, title, description, and secondary badge -->
              <div class="flex items-center gap-3 px-4 py-3 hover:bg-accent/50 transition-colors cursor-pointer">
                <div class="flex items-center justify-center w-9 h-9 rounded-md bg-primary/10 text-primary shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="text-sm font-medium">Activity Log</div>
                  <div class="text-xs text-muted-foreground">View recent actions and events</div>
                </div>
                <span class="mw-badge mw-badge-secondary">12</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Code</h2>
          <div class="mw-code-block">
            <button class="copy-btn" title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
            </button>
            <pre><code is:raw>&lt;div class="divide-y divide-border"&gt;
  &lt;!-- Item with badge --&gt;
  &lt;div class="flex items-center gap-3 px-4 py-3 hover:bg-accent/50 transition-colors cursor-pointer"&gt;
    &lt;div class="flex items-center justify-center w-9 h-9 rounded-md bg-primary/10 text-primary shrink-0"&gt;
      &lt;!-- Icon SVG --&gt;
    &lt;/div&gt;
    &lt;div class="flex-1 min-w-0"&gt;
      &lt;div class="text-sm font-medium"&gt;Project Roadmap&lt;/div&gt;
      &lt;div class="text-xs text-muted-foreground"&gt;Updated 2 hours ago&lt;/div&gt;
    &lt;/div&gt;
    &lt;span class="mw-badge mw-badge-default"&gt;New&lt;/span&gt;
  &lt;/div&gt;

  &lt;!-- Item with chevron --&gt;
  &lt;div class="flex items-center gap-3 px-4 py-3 hover:bg-accent/50 transition-colors cursor-pointer"&gt;
    &lt;div class="flex items-center justify-center w-9 h-9 rounded-md bg-primary/10 text-primary shrink-0"&gt;
      &lt;!-- Icon SVG --&gt;
    &lt;/div&gt;
    &lt;div class="flex-1 min-w-0"&gt;
      &lt;div class="text-sm font-medium"&gt;Team Members&lt;/div&gt;
      &lt;div class="text-xs text-muted-foreground"&gt;Manage your team and permissions&lt;/div&gt;
    &lt;/div&gt;
    &lt;svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground"&gt;&lt;path d="m9 18 6-6-6-6"/&gt;&lt;/svg&gt;
  &lt;/div&gt;

  &lt;!-- Item with count badge --&gt;
  &lt;div class="flex items-center gap-3 px-4 py-3 hover:bg-accent/50 transition-colors cursor-pointer"&gt;
    &lt;div class="flex items-center justify-center w-9 h-9 rounded-md bg-primary/10 text-primary shrink-0"&gt;
      &lt;!-- Icon SVG --&gt;
    &lt;/div&gt;
    &lt;div class="flex-1 min-w-0"&gt;
      &lt;div class="text-sm font-medium"&gt;Activity Log&lt;/div&gt;
      &lt;div class="text-xs text-muted-foreground"&gt;View recent actions and events&lt;/div&gt;
    &lt;/div&gt;
    &lt;span class="mw-badge mw-badge-secondary"&gt;12&lt;/span&gt;
  &lt;/div&gt;
&lt;/div&gt;</code></pre>
          </div>
        </div>

        <!-- Without Icon -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Without Icon</h2>
          <p class="text-muted-foreground leading-relaxed">Items can omit the leading icon for a simpler layout.</p>
          <div class="mw-card">
            <div class="divide-y divide-border">
              <div class="flex items-center gap-3 px-4 py-3 hover:bg-accent/50 transition-colors cursor-pointer">
                <div class="flex-1 min-w-0">
                  <div class="text-sm font-medium">General Settings</div>
                  <div class="text-xs text-muted-foreground">Configure your workspace preferences</div>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground"><path d="m9 18 6-6-6-6"/></svg>
              </div>
              <div class="flex items-center gap-3 px-4 py-3 hover:bg-accent/50 transition-colors cursor-pointer">
                <div class="flex-1 min-w-0">
                  <div class="text-sm font-medium">Notifications</div>
                  <div class="text-xs text-muted-foreground">Choose what alerts you receive</div>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground"><path d="m9 18 6-6-6-6"/></svg>
              </div>
            </div>
          </div>

          <div class="mw-code-block">
            <button class="copy-btn" title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
            </button>
            <pre><code is:raw>&lt;div class="flex items-center gap-3 px-4 py-3 hover:bg-accent/50 transition-colors cursor-pointer"&gt;
  &lt;div class="flex-1 min-w-0"&gt;
    &lt;div class="text-sm font-medium"&gt;General Settings&lt;/div&gt;
    &lt;div class="text-xs text-muted-foreground"&gt;Configure your workspace preferences&lt;/div&gt;
  &lt;/div&gt;
  &lt;svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground"&gt;&lt;path d="m9 18 6-6-6-6"/&gt;&lt;/svg&gt;
&lt;/div&gt;</code></pre>
          </div>
        </div>
      </div>

</DocsLayout>
