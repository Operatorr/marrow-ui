---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const tableCode = `<div class="overflow-x-auto">
  <table class="mw-table">
    <thead>
      <tr>
        <th>Invoice</th>
        <th>Status</th>
        <th>Method</th>
        <th class="text-right">Amount</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="font-medium">INV-001</td>
        <td><span class="mw-badge mw-badge-default">Paid</span></td>
        <td class="text-muted-foreground">Credit Card</td>
        <td class="text-right">$250.00</td>
      </tr>
      <tr>
        <td class="font-medium">INV-002</td>
        <td><span class="mw-badge mw-badge-outline">Pending</span></td>
        <td class="text-muted-foreground">PayPal</td>
        <td class="text-right">$150.00</td>
      </tr>
      <tr>
        <td class="font-medium">INV-003</td>
        <td><span class="mw-badge mw-badge-default">Paid</span></td>
        <td class="text-muted-foreground">Bank Transfer</td>
        <td class="text-right">$350.00</td>
      </tr>
      <tr>
        <td class="font-medium">INV-004</td>
        <td><span class="mw-badge mw-badge-destructive">Overdue</span></td>
        <td class="text-muted-foreground">Credit Card</td>
        <td class="text-right">$450.00</td>
      </tr>
      <tr>
        <td class="font-medium">INV-005</td>
        <td><span class="mw-badge mw-badge-default">Paid</span></td>
        <td class="text-muted-foreground">PayPal</td>
        <td class="text-right">$550.00</td>
      </tr>
    </tbody>
  </table>
</div>`;

const usageCode = `<table class="mw-table">
  <thead>
    <tr>
      <th>Header 1</th>
      <th>Header 2</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Data 1</td>
      <td>Data 2</td>
    </tr>
  </tbody>
</table>`;
---

<DocsLayout title="Table" description="A data table for displaying structured information" activeComponent="table">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Table</h1>
          <p class="mt-2 text-lg text-muted-foreground">A responsive data table for displaying rows and columns of structured information.</p>
        </div>

        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Preview</h2>
          <div class="mw-card p-0 overflow-hidden">
            <div class="overflow-x-auto">
              <table class="mw-table">
                <thead>
                  <tr>
                    <th>Invoice</th>
                    <th>Status</th>
                    <th>Method</th>
                    <th class="text-right">Amount</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td class="font-medium">INV-001</td>
                    <td><span class="mw-badge mw-badge-default">Paid</span></td>
                    <td class="text-muted-foreground">Credit Card</td>
                    <td class="text-right">$250.00</td>
                  </tr>
                  <tr>
                    <td class="font-medium">INV-002</td>
                    <td><span class="mw-badge mw-badge-outline">Pending</span></td>
                    <td class="text-muted-foreground">PayPal</td>
                    <td class="text-right">$150.00</td>
                  </tr>
                  <tr>
                    <td class="font-medium">INV-003</td>
                    <td><span class="mw-badge mw-badge-default">Paid</span></td>
                    <td class="text-muted-foreground">Bank Transfer</td>
                    <td class="text-right">$350.00</td>
                  </tr>
                  <tr>
                    <td class="font-medium">INV-004</td>
                    <td><span class="mw-badge mw-badge-destructive">Overdue</span></td>
                    <td class="text-muted-foreground">Credit Card</td>
                    <td class="text-right">$450.00</td>
                  </tr>
                  <tr>
                    <td class="font-medium">INV-005</td>
                    <td><span class="mw-badge mw-badge-default">Paid</span></td>
                    <td class="text-muted-foreground">PayPal</td>
                    <td class="text-right">$550.00</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Usage -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Usage</h2>
          <CodeBlock code={usageCode} lang="html" />
        </div>

        <!-- Code -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Code</h2>
          <CodeBlock code={tableCode} lang="html" />
        </div>
      </div>

</DocsLayout>
