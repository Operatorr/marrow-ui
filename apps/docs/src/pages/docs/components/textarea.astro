---
import DocsLayout from "../../../layouts/DocsLayout.astro";
---

<DocsLayout title="Textarea" description="A multi-line text input field" activeComponent="textarea">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Textarea</h1>
          <p class="mt-2 text-lg text-muted-foreground">A multi-line text input for longer form content.</p>
        </div>

        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Preview</h2>
          <div class="mw-card p-6 space-y-6">
            <!-- Default -->
            <div class="space-y-2">
              <label class="mw-label">Default</label>
              <textarea class="mw-textarea max-w-lg"></textarea>
            </div>

            <!-- With placeholder -->
            <div class="space-y-2">
              <label class="mw-label">With Placeholder</label>
              <textarea class="mw-textarea max-w-lg" placeholder="Type your message here..."></textarea>
            </div>

            <!-- With value -->
            <div class="space-y-2">
              <label class="mw-label">With Content</label>
              <textarea class="mw-textarea max-w-lg">This textarea has some default content that a user might want to edit.</textarea>
            </div>

            <!-- Disabled -->
            <div class="space-y-2">
              <label class="mw-label text-muted-foreground">Disabled</label>
              <textarea class="mw-textarea max-w-lg" disabled placeholder="This textarea is disabled..."></textarea>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Code</h2>
          <div class="mw-code-block">
            <button onclick="copyCode(this)" class="copy-btn" title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
            </button>
            <pre><code>&lt;!-- Default textarea --&gt;
&lt;div class="space-y-2"&gt;
  &lt;label class="mw-label"&gt;Message&lt;/label&gt;
  &lt;textarea class="mw-textarea"&gt;&lt;/textarea&gt;
&lt;/div&gt;

&lt;!-- With placeholder --&gt;
&lt;div class="space-y-2"&gt;
  &lt;label class="mw-label"&gt;Message&lt;/label&gt;
  &lt;textarea class="mw-textarea" placeholder="Type your message here..."&gt;&lt;/textarea&gt;
&lt;/div&gt;

&lt;!-- Disabled --&gt;
&lt;div class="space-y-2"&gt;
  &lt;label class="mw-label"&gt;Message&lt;/label&gt;
  &lt;textarea class="mw-textarea" disabled placeholder="This textarea is disabled..."&gt;&lt;/textarea&gt;
&lt;/div&gt;</code></pre>
          </div>
        </div>
      </div>

</DocsLayout>
