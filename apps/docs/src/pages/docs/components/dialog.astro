---
import DocsLayout from "../../../layouts/DocsLayout.astro";
---

<DocsLayout title="Dialog" description="A modal dialog that interrupts the user with important content and expects a response" activeComponent="dialog">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Dialog</h1>
          <p class="mt-2 text-lg text-muted-foreground">A modal dialog that interrupts the user with important content and expects a response.</p>
        </div>
        <div class="mw-separator"></div>

        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card flex items-center justify-center min-h-[200px]">
            <div x-data="mwDialog()">
              <button @click="show()" class="mw-btn mw-btn-outline">Open Dialog</button>
              <template x-if="open">
                <div>
                  <div class="mw-overlay" @click="close()"></div>
                  <div class="mw-dialog" @keydown.escape.window="close()">
                    <div class="flex flex-col space-y-1.5 mb-4">
                      <h3 class="font-heading text-lg font-semibold">Edit Profile</h3>
                      <p class="text-sm text-muted-foreground">Make changes to your profile here. Click save when you're done.</p>
                    </div>
                    <div class="space-y-4">
                      <div class="space-y-2">
                        <label class="mw-label">Name</label>
                        <input type="text" class="mw-input" value="John Doe" />
                      </div>
                      <div class="space-y-2">
                        <label class="mw-label">Email</label>
                        <input type="email" class="mw-input" value="john@example.com" />
                      </div>
                    </div>
                    <div class="flex justify-end gap-2 mt-6">
                      <button @click="close()" class="mw-btn mw-btn-outline">Cancel</button>
                      <button @click="close()" class="mw-btn mw-btn-primary">Save changes</button>
                    </div>
                    <button @click="close()" class="absolute top-3 right-3 mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm" style="border:none;">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                    </button>
                  </div>
                </div>
              </template>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <div class="mw-code-block">
            <button class="copy-btn" title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
            </button>
            <pre><code is:raw>&lt;div x-data="mwDialog()"&gt;
  &lt;button @click="show()" class="mw-btn mw-btn-outline"&gt;Open Dialog&lt;/button&gt;

  &lt;template x-if="open"&gt;
    &lt;div&gt;
      &lt;div class="mw-overlay" @click="close()"&gt;&lt;/div&gt;
      &lt;div class="mw-dialog" @keydown.escape.window="close()"&gt;
        &lt;div class="flex flex-col space-y-1.5 mb-4"&gt;
          &lt;h3 class="font-heading text-lg font-semibold"&gt;Edit Profile&lt;/h3&gt;
          &lt;p class="text-sm text-muted-foreground"&gt;
            Make changes to your profile here. Click save when you're done.
          &lt;/p&gt;
        &lt;/div&gt;

        &lt;div class="space-y-4"&gt;
          &lt;div class="space-y-2"&gt;
            &lt;label class="mw-label"&gt;Name&lt;/label&gt;
            &lt;input type="text" class="mw-input" value="John Doe" /&gt;
          &lt;/div&gt;
          &lt;div class="space-y-2"&gt;
            &lt;label class="mw-label"&gt;Email&lt;/label&gt;
            &lt;input type="email" class="mw-input" value="john@example.com" /&gt;
          &lt;/div&gt;
        &lt;/div&gt;

        &lt;div class="flex justify-end gap-2 mt-6"&gt;
          &lt;button @click="close()" class="mw-btn mw-btn-outline"&gt;Cancel&lt;/button&gt;
          &lt;button @click="close()" class="mw-btn mw-btn-primary"&gt;Save changes&lt;/button&gt;
        &lt;/div&gt;

        &lt;button @click="close()" class="absolute top-3 right-3 mw-btn mw-btn-ghost mw-btn-icon mw-btn-sm"&gt;
          &lt;svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"&gt;&lt;path d="M18 6 6 18"/&gt;&lt;path d="m6 6 12 12"/&gt;&lt;/svg&gt;
        &lt;/button&gt;
      &lt;/div&gt;
    &lt;/div&gt;
  &lt;/template&gt;
&lt;/div&gt;</code></pre>
          </div>
        </div>
      </div>

</DocsLayout>
