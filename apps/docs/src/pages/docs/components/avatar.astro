---
import DocsLayout from "../../../layouts/DocsLayout.astro";
---

<DocsLayout title="Avatar" description="An image element with a fallback for representing the user" activeComponent="avatar">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Avatar</h1>
          <p class="mt-2 text-lg text-muted-foreground">An image element with a fallback for representing the user.</p>
        </div>
        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card flex items-center justify-center min-h-[200px]">
            <div class="flex items-center gap-6">
              <!-- Image avatar -->
              <div class="mw-avatar">
                <img src="https://i.pravatar.cc/150?img=32" alt="User avatar" />
              </div>

              <!-- Fallback initials -->
              <div class="mw-avatar">
                <span>JD</span>
              </div>

              <!-- Small -->
              <div class="mw-avatar mw-avatar-sm">
                <img src="https://i.pravatar.cc/150?img=12" alt="User avatar" />
              </div>

              <!-- Default -->
              <div class="mw-avatar">
                <img src="https://i.pravatar.cc/150?img=47" alt="User avatar" />
              </div>

              <!-- Large -->
              <div class="mw-avatar mw-avatar-lg">
                <img src="https://i.pravatar.cc/150?img=5" alt="User avatar" />
              </div>

              <!-- Large fallback -->
              <div class="mw-avatar mw-avatar-lg">
                <span>AB</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <div class="mw-code-block">
            <button class="copy-btn" title="Copy to clipboard">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
            </button>
            <pre><code is:raw>&lt;!-- Image Avatar --&gt;
&lt;div class="mw-avatar"&gt;
  &lt;img src="https://i.pravatar.cc/150?img=32" alt="User avatar" /&gt;
&lt;/div&gt;

&lt;!-- Fallback Initials --&gt;
&lt;div class="mw-avatar"&gt;
  &lt;span&gt;JD&lt;/span&gt;
&lt;/div&gt;

&lt;!-- Small --&gt;
&lt;div class="mw-avatar mw-avatar-sm"&gt;
  &lt;img src="avatar.jpg" alt="User avatar" /&gt;
&lt;/div&gt;

&lt;!-- Default --&gt;
&lt;div class="mw-avatar"&gt;
  &lt;img src="avatar.jpg" alt="User avatar" /&gt;
&lt;/div&gt;

&lt;!-- Large --&gt;
&lt;div class="mw-avatar mw-avatar-lg"&gt;
  &lt;img src="avatar.jpg" alt="User avatar" /&gt;
&lt;/div&gt;

&lt;!-- Large with Fallback --&gt;
&lt;div class="mw-avatar mw-avatar-lg"&gt;
  &lt;span&gt;AB&lt;/span&gt;
&lt;/div&gt;</code></pre>
          </div>
        </div>
      </div>

</DocsLayout>
