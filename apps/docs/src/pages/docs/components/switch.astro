---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const switchCode = `<!-- Switch (off by default) -->
<div class="flex items-center gap-3" x-data="mwSwitch()">
  <button class="mw-switch"
          :data-state="checked ? 'checked' : 'unchecked'"
          @click="toggle()"
          role="switch"
          :aria-checked="checked">
    <span class="mw-switch-thumb"></span>
  </button>
  <span class="text-sm" x-text="checked ? 'On' : 'Off'"></span>
</div>

<!-- Switch (on by default) -->
<div class="flex items-center gap-3" x-data="mwSwitch(true)">
  <button class="mw-switch"
          :data-state="checked ? 'checked' : 'unchecked'"
          @click="toggle()"
          role="switch"
          :aria-checked="checked">
    <span class="mw-switch-thumb"></span>
  </button>
  <span class="text-sm" x-text="checked ? 'On' : 'Off'"></span>
</div>

<!-- Switch with label -->
<div class="flex items-center gap-3" x-data="mwSwitch()">
  <button class="mw-switch"
          :data-state="checked ? 'checked' : 'unchecked'"
          @click="toggle()"
          role="switch"
          :aria-checked="checked"
          id="airplane-mode">
    <span class="mw-switch-thumb"></span>
  </button>
  <label for="airplane-mode" class="mw-label cursor-pointer">Airplane Mode</label>
</div>

<!-- Disabled switch -->
<div class="flex items-center gap-3" x-data="mwSwitch()">
  <button class="mw-switch opacity-50 pointer-events-none"
          :data-state="checked ? 'checked' : 'unchecked'"
          role="switch"
          :aria-checked="checked"
          disabled>
    <span class="mw-switch-thumb"></span>
  </button>
  <span class="text-sm text-muted-foreground">Disabled</span>
</div>`;
---

<DocsLayout title="Switch" description="A toggle switch for on/off states" activeComponent="switch">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Switch</h1>
          <p class="mt-2 text-lg text-muted-foreground">A toggle control that switches between on and off states.</p>
        </div>

        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Preview</h2>
          <div class="mw-card p-6 flex flex-col gap-6">
            <!-- Default (off) -->
            <div class="flex items-center gap-3" x-data="mwSwitch()">
              <button class="mw-switch"
                      :data-state="checked ? 'checked' : 'unchecked'"
                      @click="toggle()"
                      role="switch"
                      :aria-checked="checked">
                <span class="mw-switch-thumb"></span>
              </button>
              <span class="text-sm" x-text="checked ? 'On' : 'Off'"></span>
            </div>

            <!-- Default (on) -->
            <div class="flex items-center gap-3" x-data="mwSwitch(true)">
              <button class="mw-switch"
                      :data-state="checked ? 'checked' : 'unchecked'"
                      @click="toggle()"
                      role="switch"
                      :aria-checked="checked">
                <span class="mw-switch-thumb"></span>
              </button>
              <span class="text-sm" x-text="checked ? 'On' : 'Off'"></span>
            </div>

            <!-- With label -->
            <div class="flex items-center gap-3" x-data="mwSwitch()">
              <button class="mw-switch"
                      :data-state="checked ? 'checked' : 'unchecked'"
                      @click="toggle()"
                      role="switch"
                      :aria-checked="checked"
                      id="airplane-mode">
                <span class="mw-switch-thumb"></span>
              </button>
              <label for="airplane-mode" class="mw-label cursor-pointer">Airplane Mode</label>
            </div>

            <!-- Disabled -->
            <div class="flex items-center gap-3" x-data="mwSwitch()">
              <button class="mw-switch opacity-50 pointer-events-none"
                      :data-state="checked ? 'checked' : 'unchecked'"
                      role="switch"
                      :aria-checked="checked"
                      disabled>
                <span class="mw-switch-thumb"></span>
              </button>
              <span class="text-sm text-muted-foreground">Disabled</span>
            </div>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-4">
          <h2 class="font-heading text-2xl font-semibold tracking-tight">Code</h2>
          <CodeBlock code={switchCode} lang="html" />
        </div>
      </div>

</DocsLayout>
