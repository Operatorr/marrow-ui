---
import DocsLayout from "../../../layouts/DocsLayout.astro";
import CodeBlock from "../../../components/CodeBlock.astro";

const breadcrumbCode = `<nav class="mw-breadcrumb">
  <a href="#">Home</a>

  <!-- Separator -->
  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14"
       viewBox="0 0 24 24" fill="none" stroke="currentColor"
       stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
       class="shrink-0">
    <path d="m9 18 6-6-6-6"/>
  </svg>

  <a href="#">Components</a>

  <!-- Separator -->
  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14"
       viewBox="0 0 24 24" fill="none" stroke="currentColor"
       stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
       class="shrink-0">
    <path d="m9 18 6-6-6-6"/>
  </svg>

  <!-- Current page (no link) -->
  <span class="mw-breadcrumb-current">Breadcrumb</span>
</nav>`;
---

<DocsLayout title="Breadcrumb" description="Displays a hierarchical navigation trail for the current page" activeComponent="breadcrumb">
      <div class="space-y-8">
        <div>
          <h1 class="font-heading text-3xl font-bold tracking-tight">Breadcrumb</h1>
          <p class="mt-2 text-lg text-muted-foreground">Displays a hierarchical navigation trail for the current page.</p>
        </div>
        <div class="mw-separator"></div>

        <!-- Preview -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Preview</h2>
          <div class="mw-card flex items-center justify-center min-h-[200px]">
            <nav class="mw-breadcrumb">
              <a href="#">Home</a>
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0"><path d="m9 18 6-6-6-6"/></svg>
              <a href="#">Components</a>
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0"><path d="m9 18 6-6-6-6"/></svg>
              <span class="mw-breadcrumb-current">Breadcrumb</span>
            </nav>
          </div>
        </div>

        <!-- Code -->
        <div class="space-y-3">
          <h2 class="font-heading text-xl font-semibold">Code</h2>
          <CodeBlock code={breadcrumbCode} lang="html" />
        </div>
      </div>

</DocsLayout>
